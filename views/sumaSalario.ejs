<table class="table table-striped projects col-md-10 offset-md-1" border="4" style="text-align: center; background-color: #f2f2f2;">
    <thead>
        <tr style="background-color: #979296; color: #000000;">
            <th><i class="fas fa-calendar-alt"></i> Fecha de Contratación</th>
            <th><i class="fas fa-money-bill"></i> Total en dólares de salarios pagados</th>
        </tr>
    </thead>
    <tbody>
        <% empleadosPorFecha.forEach((empleado, index) => { %>
            <tr style="background-color: #dff0e1; color: #000000;">
                <td><%= new Date(empleado.fecha_contratacion).toLocaleDateString('es-ES', {
                    day: 'numeric',
                    month: 'numeric',
                    year: 'numeric',
                }) %></td>
                <td>$<%= empleado.totalSalarios %></td>
            </tr>
        <% }); %>
  
        <tr style="background-color: #979296; color: #000000;">
            <td><strong>Total salarios pagados:</strong></td>
            <td><strong>$<%= totalSalariosGeneral %></strong></td>
        </tr>
    </tbody>
  </table>
  